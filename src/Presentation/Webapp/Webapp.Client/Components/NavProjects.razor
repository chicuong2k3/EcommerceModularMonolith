@using Microsoft.AspNetCore.Components

<div class="sidebar-section">
    <div class="sidebar-group-label">Projects</div>
    <div class="sidebar-menu">
        @foreach (var project in Projects)
        {
            <div class="sidebar-menu-item">
                <button class="sidebar-menu-button">
                    <a href="@project.Url" class="flex aic g8">
                        <Icon Name="@project.Icon" />
                        <span>@project.Name</span>
                    </a>
                </button>
                <div class="relative">
                    <div class="absolute right-2 top-1/2 -translate-y-1/2 flex">
                        <button class="icon-btn opacity-0 hover:opacity-100" @onclick:stopPropagation="true" @onclick="() => ShowDropdown(project)">
                            <Icon Name="more_horiz" Size="18px" />
                        </button>
                    </div>
                </div>
            </div>
        }
        <div class="sidebar-menu-item">
            <button class="sidebar-menu-button text-sidebar-foreground/70">
                <Icon Name="more_horiz" class="text-sidebar-foreground/70" />
                <span>More</span>
            </button>
        </div>
    </div>
</div>

@if (selectedProject != null && showDropdown)
{
    <div class="fixed top-0 left-0 w-full h-full" @onclick="HideDropdown"></div>
    <div class="dropdown-menu" style="@dropdownPosition">
        <div class="dropdown-item">
            <div class="flex aic g8">
                <Icon Name="folder" class="text-muted-foreground" />
                <span>View Project</span>
            </div>
        </div>
        <div class="dropdown-item">
            <div class="flex aic g8">
                <Icon Name="forward" class="text-muted-foreground" />
                <span>Share Project</span>
            </div>
        </div>
        <div class="dropdown-separator"></div>
        <div class="dropdown-item">
            <div class="flex aic g8">
                <Icon Name="delete" class="text-muted-foreground" />
                <span>Delete Project</span>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public List<Project> Projects { get; set; } = new();

    private Project selectedProject;
    private bool showDropdown = false;
    private string dropdownPosition = "top: 0; right: 0;";

    private void ShowDropdown(Project project)
    {
        selectedProject = project;
        showDropdown = true;
        // In a real implementation, we would calculate the position based on the clicked element
        dropdownPosition = "top: 50px; right: 10px;";
    }

    private void HideDropdown()
    {
        showDropdown = false;
    }

    public class Project
    {
        public string Name { get; set; }
        public string Url { get; set; }
        public string Icon { get; set; }
    }
}
